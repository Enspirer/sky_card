<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mask"
    tools:context=".LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/botom_navigation"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:layout_gravity="center"
            android:background="@drawable/corner_background_addcard"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/addcard"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_centerInParent="true"
                    android:layout_centerHorizontal="true"
                    android:text="Add Card"
                    android:textColor="@color/white" />

                <ImageView
                    android:id="@+id/ivCloseCard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_icon_material_close" />

                <ImageView
                    android:id="@+id/ivbackCard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/ic_icon_ionic_ios_arrow_back" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/ivAddCardPrev"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center_horizontal"
                android:rotation="360"/>

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollIndicators="none"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:paddingLeft="50dp"
                android:paddingRight="50dp">

                    <TextView
                        android:id="@+id/tvName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_weight="1"
                        android:text="Name" />

                    <EditText
                        android:id="@+id/etLastName"
                        style="@style/EditLoginTextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_alignParentLeft="true"
                        android:layout_weight="1"
                        android:background="@drawable/edittext_top_curve_gray"
                        android:textAllCaps="false" />

                <TextView
                    android:id="@+id/tvtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="10dp"
                    android:text="Title" />

                <EditText
                    android:id="@+id/etTitle"
                    style="@style/EditLoginTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/edittext_top_curve_gray"
                    android:inputType="textEmailAddress" />

                <TextView
                    android:id="@+id/tvCompanyName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="10dp"
                    android:text="Company Name" />

                <EditText
                    android:id="@+id/etCompanyName"
                    style="@style/EditLoginTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:autofillHints=""
                    android:background="@drawable/edittext_top_curve_gray"
                    android:inputType="textEmailAddress" />

                <TextView
                    android:id="@+id/tvMobileNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="10dp"
                    android:text="Mobile Number" />

                <EditText
                    android:id="@+id/etMobileNum"
                    style="@style/EditLoginTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/edittext_top_curve_gray"
                    android:inputType="textEmailAddress" />

                <TextView
                    android:id="@+id/tvOtherNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="10dp"
                    android:text="Other Number" />

                <EditText
                    android:id="@+id/etEmailadd"
                    style="@style/EditLoginTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:autofillHints=""
                    android:background="@drawable/edittext_top_curve_gray"
                    android:inputType="textEmailAddress" />

                <TextView
                    android:id="@+id/tvEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="10dp"
                    android:text="Email" />

                <EditText
                    android:id="@+id/etWebSite"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:autofillHints=""
                    android:background="@drawable/edittext_top_curve_gray"
                    android:inputType="textEmailAddress" />

                <TextView
                    android:id="@+id/tvWebSite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="10dp"
                    android:text="Web Site" />

                <EditText
                    android:id="@+id/etEmail"
                    style="@style/EditLoginTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:autofillHints=""
                    android:background="@drawable/edittext_top_curve_gray"
                    android:inputType="textEmailAddress" />

                <TextView
                    android:id="@+id/tvAddLine1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="10dp"
                    android:text="Address Line 1" />

                <EditText
                    android:id="@+id/etAddLine1"
                    style="@style/EditLoginTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:autofillHints=""
                    android:background="@drawable/edittext_top_curve_gray"
                    android:inputType="textEmailAddress" />

                <TextView
                    android:id="@+id/tvAddLine2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="10dp"
                    android:text="Address Line 2" />

                <EditText
                    android:id="@+id/etAddLine2"
                    style="@style/EditLoginTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/edittext_top_curve_gray"
                    android:inputType="textEmailAddress" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginTop="10dp">

                    <Button
                        android:id="@+id/btnSaveCard"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#076ACD"
                        android:text="Save&#10;Card"
                        android:textAllCaps="false"
                        android:textColor="#FFFFFF"
                        android:layout_weight="1"/>

                    <Button
                        android:id="@+id/btnReScan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#00FFFFFF"
                        android:text="Re-Scan&#10;Card"
                        android:textAllCaps="false"
                        android:textColor="#076ACD"
                        android:layout_weight="1"/>
                </LinearLayout>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/botom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:contextClickable="true"
        app:itemBackground="@color/white"
        app:itemIconSize="40dp"
        app:itemIconTint="@drawable/selector"
        app:menu="@menu/menu_navigation" />
</RelativeLayout>
