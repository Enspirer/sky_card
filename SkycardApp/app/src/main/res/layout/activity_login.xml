<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_window"
    tools:context=".LoginActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:padding="50dp">

            <ImageView
                android:layout_width="137dp"
                android:layout_height="145dp"
                android:layout_gravity="center"
                android:layout_marginBottom="40dp"
                app:srcCompat="@mipmap/sky_card_logo_foreground"
                android:contentDescription="loginLogo"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="75dp"
                android:text="Welcome Back" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tvEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email" />

            <EditText
                android:id="@+id/etEmail"
                style="@style/EditLoginTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvEmail"
                android:background="@drawable/edittext_top_curve_gray"
                android:hint="Email Address"
                android:inputType="textEmailAddress" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password" />

            <EditText
                android:id="@+id/etPassword"
                style="@style/EditLoginTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_bottom_curve_gray"
                android:ems="10"
                android:hint="Password"
                android:inputType="textPassword" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <CheckBox
                    android:id="@+id/checkBoxRemeber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/light_blue_600"
                    android:text="Remenber Me"
                    android:textColor="@color/light_blue_600" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/checkBoxRemeber"
                    android:layout_alignParentRight="true"
                    android:layout_toLeftOf="@+id/checkBoxRemeber"
                    android:text="Forget Password?"
                    android:textColor="@color/light_blue_600" />

            </RelativeLayout>

            <Button
                android:id="@+id/btnLogin"
                style="@style/styleButtonLogin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:backgroundTint="#1B9DFD"
                android:padding="10dp"
                android:text="Log in"
                android:clickable="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="or" />



            <Button
                android:id="@+id/btnSignUp"
                style="@style/styleButtonSignup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#FFFFFF"
                android:padding="10dp"
                android:layout_marginBottom="10dp"
                android:text="Sign Up"
                android:clickable="true"/>


        </LinearLayout>


    </ScrollView>

</LinearLayout>